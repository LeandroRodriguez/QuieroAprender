<div class="login_title text-center"><h1>QUIERO APRENDER!</h1></div>

<div class="col-md-4 col-md-offset-4">
<%= form_for @user_session, :as => :user_session, :url => { :action => "create" } , :html => {:class => 'form-login'} do |f| %>
	<div class="form-group">
	  <%= f.text_field :email, :class => 'form-control', :placeholder => 'Email' %>
	</div>
	<div class="form-group">
	  <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password' %>
	</div>
	  
	<%= f.submit 'Login', :class => 'btn btn-primary btn-block' %>
	<%= link_to "Forgot your password?", '#', :class => 'text-right btn-block' %>
<% end %>
</div>