function initialize() {
  var myLatlng = new google.maps.LatLng(<%= @course.latitude %>, <%= @course.longitude %>);
  var mapOptions = {
    center: myLatlng,
    zoom:8, 
    styles: mapStyle
  }

  var map = new google.maps.Map(document.getElementById('course_map'), mapOptions);

  var marker = new google.maps.Marker({
      position: myLatlng,
      map: map,
      title: '<%= @course.name %>'
  });

  google.maps.event.addListener(marker, 'click', function() {
    map.setZoom(8);
    map.setCenter(marker.getPosition());
  });
}

$("#user-rating").rating({'readonly': true, 'size': 'xs', 'showCaption' : false, 'showClear' : false})
