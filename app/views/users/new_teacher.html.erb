<div class="user-edit col-md-8 teacherCreation">
	<div class="page-header">
  		<h2>Registracion</h2>
	</div>

	<%= form_for @user, :url => create_teacher_path do |f| %>
	
		<div class="row">
			<div class="col-md-3">
		  		<%= f.label :email %>
			</div>
		  <div class="col-md-4">
		  	<%= f.text_field :email, :class => 'form-control', :placeholder => @user.email %>
		  </div>
		</div>
		
		<div class="row">
			<div class="col-md-3">
		  		<b>Nombre</b>
			</div>
		  <div class="col-md-4">
		  	<%= f.text_field :name, :class => 'form-control', :placeholder => @user.name %>
		  </div>
		</div>
		<div class="row">
			<div class="col-md-3">
		  		<b>Descripci√≥n para mostrar</b>
			</div>
		  <div class="col-md-4">
		  	<%= f.text_field :description, :class => 'form-control', :placeholder => @user.description %>
		  </div>
		</div>
		<div class="row">
			<div class="col-md-3">
		  		<b>Fecha de nacimiento</b>
			</div>
		  <div class="col-md-4">
			<%= f.text_field :birthdate, :id => "datepicker", :class => 'form-control', :value => Date.today %>
		  </div>
		</div>
		<script>
		$('#datepicker').datepicker({format: 'yyyy-mm-dd'});
		</script>
		<div class="row">
			<div class="col-md-3">
			  	<b>Password</b>
		  	</div>
		  <div class="col-md-4">
		  	<%= f.password_field :password, :class => 'form-control', :placeholder => '' %>
		  </div>
		</div>
		<div class="row">
		  	<div class="col-md-3">
			  	<b>Confirma tu Password</b>
		  	</div>
		  <div class="col-md-4">
		  	<%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => '' %>
		  </div>
		</div>
	
		<div class="actions col-md-4">
			<% if !defined? @submit_text then @submit_text = 'Crear' end%>
			<%= f.submit @submit_text, :class => 'btn btn-primary' %>
			<% if defined? @back_link %>
				<%= link_to 'Back', @back_link, {:class => 'btn btn-primary'} %>
			<% end %>
		</div>
	<% end %>
</div>