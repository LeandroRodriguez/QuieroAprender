<!-- Toque algo en bootstrap que hace que se vean feas las estrellas, asi que lo incluyo
de vuelta para que se vean lindas pisando la config que toque arriba :P 
<link href="http://netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet">
-->
<hr>
<div class="row">
	<div class="col-md-4">
		<hr>
		<div id="myCarousel" class="carousel slide">
			<ol class="carousel-indicators">
				<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
				<li data-target="#myCarousel" data-slide-to="1"></li>
				<li data-target="#myCarousel" data-slide-to="2"></li>
			</ol>
			<div class="carousel-inner">
				<!-- All slides go inside .carousel-inner -->
				<div class="item active">
					<img src="http://sndt.ac.in/images/courses/courses-imgs.jpg"  width="400" height="300" alt="..." />
					<div class="carousel-caption">Primer imagen</div>
				</div>
				<div class="item">
					<img src="https://www.coleurope.eu/content/studyprogrammes/law/images/Students%20in%20a%20course.%20nb%20031.jpg"  width="400" height="300" alt="..." />
					<div class="carousel-caption">Segunda imagen</div>
				</div>
				<div class="item">
					<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTNKieMWGkXrXpzTlOl8J04vlc7lrrWwPlmqk2cUlrhN5Btrq1Pnw"  width="400" height="300" alt="..." />
					<div class="carousel-caption">Tercer imagen</div>
				</div>
			</div>
			<!-- Carousel nav -->
			<a class="carousel-control left" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
			<a class="carousel-control right" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
		</div>
	</div>
	<div class="col-md-5">
		<h1 ><%= @course.name %></h1>
		<button role="button" class="btn btn-social btn-facebook" data-toggle="modal" data-target="#FbShareModal"><i class="fa fa-facebook"></i> | Compartir en Facebook</button>
		<!-- Facebook share modal view -->
		<div class="modal fade" id="FbShareModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
						<h4 class="modal-title" id="myModalLabel">Comparte el curso con tus amigos de Facebook!</h4>
					</div>
					<div class="modal-body">
						<form id="InfroText" method="POST">
							<input name="InfroText" value="1" type="hidden">
							<table>
								<tbody>
									<tr>
										<td>Title</td><td>
										<input name="title" id="title" style="width:300px" type="text">
										<span class="hide help-inline">This is required</span></td>
									</tr>
									<tr>
										<td>Introudction</td><td><textarea name="contect" style="width:300px;height:100px"></textarea></td>
									</tr>
								</tbody>
							</table>
						</form>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
						<button type="button" class="btn btn-primary" id="InfroTextSubmit">Compartir</button>
					</div>
				</div>
			</div>
		</div>
		<!-- End Facebook share modal view-->

		<hr>
		<p>
			Descripción: <%= @course.description %>
		</p>
		<p>
			Dirección: <%= @course.address %>
		</p>
		<p>
			Subcategoría:
			<% if (@course.subcategory != nil) %>
			<%= h @course.subcategory.name %>
		</p>
		<p>
			Precio: <span class="glyphicon glyphicon-usd"></span> <%= @course.price %>
		</p>
		<p>
			Tags:
			<% @course.tags.each do |t| %>
			<%= t.name %>
			<% end %>
		</p>
		<div class="basic" data-average="12" data-id="1"></div>

		<a class="btn btn-lg btn-success" href="../../components/#navbar" role="button">Inscribirme! &raquo;</a>

		<hr>
	</div>
	<div class="col-md-3">
		<div class="panel panel-default">
			<div class="panel-body" id ="cursosRelacionados">
				<h4>Cursos que podrían interesarte </h4>
				<div class="list-group container-results" id="cursosRelacionados">
					<% @cursosRelacionados.each do |c| %>
					<a id="cursosRelacionados_<%= c.id %>" class="list-group-item list-group-item-info" href="/courses/<%= c.id %>" > <h4 class="list-group-item-heading"> <%= c.name %> </h4>
					<p class="list-group-item-text">
						<%= c.description %>
					</p> </a>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-8 col-md-offset-1">
		<div class="panel panel-default container-opinions">
			<ul class="nav nav-tabs nav-justified" id="myTab">
				<li class="active">
					<a href="#Reseñas" data-toggle="tab">Reseñas</a>
				</li>
				<li>
					<a href="#Consultas" data-toggle="tab">Consultas</a>
				</li>
			</ul>
			<div class="tab-content">

				<div class="tab-pane fade in active" id="Reseñas">
					<%= bootstrap_form_for [@course, Opinion.new] do |f| %>
					<!--
					<div class="panel-body" id ="listasReseñas">
					<div class="list-group container-opinionsResults" id="listasReseñas">
					<% @course.opinions.each do |o| %>
					<a id="opinions_<%= o.id %>" class="list-group-item " >
					<h4 class="list-group-item-heading">
					<% unless o.user.nil? %>
					<%= o.user.email %>
					<% end %>
					</h4>
					<p class="list-group-item-text"> <%= o.description %> </p>
					</a>
					<% end %>
					</div>
					</div>
					-->
					<div class="panel-body" id ="listasReseñas">
						<ul class="media-list container-opinionsResults">
							<% @course.opinions.each do |o| %>
							<li class="media">
								<a class="pull-left" href="#"> <img  class="media-object" src="http://sndt.ac.in/images/courses/courses-imgs.jpg"  width="64" height="64" alt="..." /> </a>
								<div class="media-body">
									<h5 class="media-heading"> <% unless o.user.nil? %>
									<%= o.user.email %>
									<%= o.date %>
									<% end %> </h5>
									<%= o.description %>
								</div>
							</li>
							<% end %>
						</ul>
					</div>
					<div class="col-md-12 col-ms-offset-1" >
						<a id="newOpinion" class="list-group-item " > <h4 class="list-group-item-heading"> Dejanos tu comentario </h4>
						<p class="list-group-item-text">
							<textarea class="form-control" id="opinion_description" name="opinion[description]" placeholder="Descripción"></textarea>
							<br>
							<button id="addOpinion" class="btn btn-primary col-md-offset-11" >
								Add
							</button>

						</p> </a>
					</div>
					<% end %>
				</div>
				<div class="tab-pane fade" id="Consultas">

					<%= bootstrap_form_for [@course, Consultation.new] do |f| %>
					<div class="panel-body" id ="listaConsultas">
						<ul class="media-list container-opinionsResults">
							<% @course.consultations.each do |c| %>
							<% if(c.user.role == User::ROLE_TEACHER)  %>
							<li class="media list-group-item-success">
								<% else %>
							<li class="media">
								<% end %>
								<a class="pull-left" href="#"> <img  class="media-object" src="http://sndt.ac.in/images/courses/courses-imgs.jpg"  width="64" height="64" alt="..." /> </a>
								<div class="media-body">
									<h5 class="media-heading"> <% unless c.user.nil? %>
									<%= c.user.email %>
									<%= c.date %>
									<% end %> </h5>
									<%= c.description %>
								</div>
							</li>
							<% end %>
						</ul>
					</div>
					<div class="col-md-12 col-ms-offset-1" >
						<a id="newOpinion" class="list-group-item " > <h4 class="list-group-item-heading"> Preguntas </h4>
						<p class="list-group-item-text">
							<textarea class="form-control" id="consultation_description" name="consultation[description]" placeholder="Descripción"></textarea>
							<br>
							<button id="addOpinion" class="btn btn-primary col-md-offset-11" >
								Add
							</button>

						</p> </a>
					</div>
					<% end %>
				</div>

			</div>
		</div>
	</div>
	<div class="col-md-3 ">
		<div class="panel panel-default">
			<div class="panel-body" id ="cursosRelacionados">
				<h4>Te recomendamos</h4>
				<div class="list-group container-results" id="cursosRelacionados">
					<% @advertisings.each do |a| %>
					<a id="advertising_<%= a.id %>" class="list-group-item list-group-item-info" href="/advertisings/<%= a.id %>" > <h4 class="list-group-item-heading"> <%= a.name %> </h4>
					<p class="list-group-item-text">
						<%= a.description %>
					</p> </a>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>

<% end %>

