<%= form_for @user, :url => users_path do |f| %>

	<div class="row">
		<div class="col-md-4">
	  		<%= f.label :email %>
		</div>
	  <div class="col-md-6">
	  	<%= f.text_field :email, :class => 'form-control', :placeholder => @user.email %>
	  </div>
	</div>
	<div class="row">
		<div class="col-md-4">
	  		<b>Nombre</b>
		</div>
	  <div class="col-md-6">
	  	<%= f.text_field :name, :class => 'form-control', :placeholder => @user.name %>
	  </div>
	</div>
	<div class="row">
		<div class="col-md-4">
	  		<b>Descripci√≥n para mostrar</b>
		</div>
	  <div class="col-md-6">
	  	<%= f.text_field :description, :class => 'form-control', :placeholder => @user.description %>
	  </div>
	</div>
	<div class="row">
		<div class="col-md-4">
	  		<b>Fecha de nacimiento</b>
		</div>
	  <div class="col-md-6">
		<%= f.text_field :birthdate, :id => "datepicker", :value => Date.today %>
	  </div>
	</div>
	<script>
	$('#datepicker').datepicker({format: 'yyyy-mm-dd'});
	</script>
	<div class="row">
		<div class="col-md-4">
		  	<%= f.label :password %>
	  	</div>
	  <div class="col-md-6">
	  	<%= f.password_field :password, :class => 'form-control', :placeholder => '' %>
	  </div>
	</div>
	<div class="row">
	  	<div class="col-md-4">
		  	<%= f.label :password_confirmation %>
	  	</div>
	  <div class="col-md-6">
	  	<%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => '' %>
	  </div>
	</div>
	
	<div class="row">
		<div class="col-md-4">
	    	<%= f.label :role %>
		</div>
  	<div class="col-md-6">
	    <%= f.select :role, [["Estudiante", User::ROLE_STUDENT], ["Profesor", User::ROLE_TEACHER], ["Admin", User::ROLE_ADMIN]], {}, { :class => 'selectpicker', 'data-style' => "btn-primary"} %>
	</div>
	

	<div class="actions col-md-4">
		<% if !defined? @submit_text then @submit_text = 'Save' end%>
		<%= f.submit @submit_text, :class => 'btn btn-primary' %>
		<% if defined? @back_link %>
			<%= link_to 'Back', @back_link, {:class => 'btn btn-primary'} %>
		<% end %>
	</div>
<% end %>
