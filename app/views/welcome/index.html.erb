
<!--  -34.6037232, -58.3815931 es BS AS -->

<button id="map-button" type="button" class="btn btn-info">Mapa</button>
<div class="container">

	<div class="col-md-6">
    <div class="panel panel-default" style="width:550px;height:550px;">
       <div class="panel-body">
        <%= image_tag "college.png", size: "500", id: "home_icon" %>
         <div id="home_map"></div>
       </div>
     </div> 
	</div>

	<div class="col-md-6">
    <div class="panel panel-default">
       <div class="panel-body">
          <select id="category-select" title="Categoria" class="selectpicker" data-style="btn-primary">
           <%= options_from_collection_for_select(@categories, 'id', 'name') %>
           </select>

          <select id="subcategory-select" title="Subcategoria" class="selectpicker" data-style="btn-primary">
           <%= options_from_collection_for_select(@subcategories, 'id', 'name') %>
           </select>
       </div>
     </div> 
  </div>
</div>

<%= javascript_tag do %>
map = new GMaps({
      div: '#home_map',
      zoom: 8,
      width: '500px',
      height: '500px',
      lat: -34.6037232,
      lng: -58.3815931
    });
google.maps.event.trigger(map, "resize");
$("#home_map").hide();

$('#map-button').click(function(){
  $("#home_icon").fadeToggle();
  $("#home_map").fadeToggle();
  $('#map-button').toggleClass("active");
});

$( document ).ready(function() {
  $('.selectpicker').selectpicker();
});


$('#category-select').change(function() {
      $.ajax({
        url: "/update_subcategories",
        data: {
          category_id : $('#category-select').val()
        },
        dataType: "script"
      });
    });
<% end %>