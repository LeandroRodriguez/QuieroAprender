<div class="row login-index">
	<div class="col-md-4 col-md-offset-7">
		<div class="panel panel-default">
			<div class="panel-heading">
				<strong class="">Iniciar sesión</strong>
			</div>
			<div class="panel-body">
				<div align="center">
					<a href="fb_login">
						<%=image_tag("fb_boton.png", class: "facebook-login-image-button")%>
					</a>
				</div>
				<strong class="login-method-separator">o</strong>

				<%= form_for @user_session, :as => :user_session, :url => { :action => "create" } , :html => {:class => 'form-login'} do |f| %>
				<!-- <form class="form-horizontal" role="form"> -->		
					<div class="form-group">
						<%= f.text_field :email, :class => 'form-control', :placeholder => 'Correo electrónico' %>
					</div>
					<div class="form-group">
						<%= f.password_field :password, :class => 'form-control', :placeholder => 'Contraseña' %>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-3 col-sm-9">
							<div class="checkbox">
								<label class="">
									<input class="" type="checkbox">
									Recordar sesión</label>
							</div>
						</div>
					</div>
					<div class="form-group last">
						<div class="col-sm-offset-3 col-sm-9">
							<%= f.submit 'Iniciar sesión', :class => 'btn btn-success btn-sm' %>
							<!-- <button type="submit" class="btn btn-success btn-sm">
								Iniciar sesión
							</button> -->
						</div>
					</div>
				<!-- </form> -->
				<% end %>
			</div>
			<div class="panel-footer">
				¿No se encuentra registrado? <a href="#" class=""><%= link_to "Registrese ahora", signup_url %></a>
			</div>
		</div>
	</div>
</div>
